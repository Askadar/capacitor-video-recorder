{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es2017",
    "strict": true,
  },
  "files": [
    "src/index.ts"
  ]
}
